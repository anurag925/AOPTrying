<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
    <grid title="Person" name="person-grid-all" model="com.judiciary.db.Person">

        <toolbar>
            <button name="toolbarBtn" title="Click"/>
        </toolbar>
        <menubar>
            <menu title="Magic">
                <item title="Action 1" action=""/>
                <item title="Action 2" action=""/>
            </menu>
        </menubar>


        <field name="name" title="Name">
        <hilite if="$contains(name,'Anurag')" background="success"/>
        </field>
        <field name="address" title="Address"/>
        <field name="aadharNo" title="Aadhar Number"/>
        <button name="useless" title="Im am Here" />


    </grid>

    <form title="Person" name="person-form-all" model="com.judiciary.db.Person">
        <panel title="Person Overview" name="person-all-panel">
            <field name="name" title="Name">
                <editor>
                    <field name="firstName" title="First Name"/>
                    <field name="lastName" title="Last Name"/>
                </editor>
            </field>

            <field name="email" title="E-Mail">
                <viewer><![CDATA[
                    <a href="mailto:{{record.email}}">{{record.email}}</a>]]>
                </viewer>
            </field>
        </panel>
        <panel-tabs>
            <panel title="Job">
                <field name="companyName" title="Company Name"/>
                <field name="department" title="Department"/>
                <field name="position" title="Position"/>
                <field name="dateOfJoin" title="Date of Joining"/>
            </panel>
        </panel-tabs>
    </form>
    
    
</object-views>